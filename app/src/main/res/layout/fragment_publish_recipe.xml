<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/transparent_back"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/txt_upload_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#121111"
        android:text="Upload Dish Image"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/mons_semibold"
        android:layout_marginStart="12dp"
        />
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/btn_upload_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toBottomOf="@id/txt_upload_image"
        app:layout_constraintStart_toStartOf="@id/txt_upload_image"
        app:layout_constraintEnd_toEndOf="@id/txt_upload_image"
        app:srcCompat="@drawable/ic_baseline_add_a_photo_24"
        android:scaleType="fitXY"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/txt_upload_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/btn_upload_image"
        android:layout_marginTop="30dp"
        android:textColor="#121111"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/mons_semibold"
        android:layout_marginStart="12dp"
        />
    <EditText
        android:id="@+id/edt_upload_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edit_text"
        android:padding="8dp"
        android:paddingStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/txt_upload_name"
        android:hint="Apple Pie"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="4dp"

        />
    <TextView
        android:id="@+id/txt_upload_ingredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingredients"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/edt_upload_name"
        android:layout_marginTop="10dp"
        android:textColor="#121111"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/mons_semibold"
        android:layout_marginStart="12dp"
        />
    <LinearLayout
        android:id="@+id/layout_ingredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_upload_ingredients"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical" />
    <TextView
        android:id="@+id/txt_add_ingredient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+ Add Ingredient"
        android:fontFamily="@font/mons_bold"
        app:layout_constraintTop_toBottomOf="@id/layout_ingredients"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/app_theme_color"
        android:layout_marginStart="12dp"
        />

    <TextView
        android:id="@+id/txt_upload_steps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Steps Of Recipe"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/txt_add_ingredient"
        android:layout_marginTop="10dp"
        android:textColor="#121111"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/mons_semibold"
        android:layout_marginStart="12dp"
        />
    <LinearLayout
        android:id="@+id/layout_steps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_upload_steps"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical" />
    <TextView
        android:id="@+id/txt_add_steps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+ Add Recipe Steps"
        android:fontFamily="@font/mons_bold"
        app:layout_constraintTop_toBottomOf="@id/layout_steps"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/app_theme_color"
        android:layout_marginStart="12dp"
        />
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:id="@+id/layout_select_cuisine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Cuisine"
        android:layout_marginTop="10dp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_add_steps">
        <AutoCompleteTextView
            android:id="@+id/edt_select_cuisine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="none"
            android:textColor="#3C3737"
            android:fontFamily="@font/mons_semibold"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:id="@+id/layout_select_best_for"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Best For"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_select_cuisine">
        <AutoCompleteTextView
            android:id="@+id/edt_select_best_for"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="none"
            android:textColor="#3C3737"
            android:fontFamily="@font/mons_semibold"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:id="@+id/layout_select_veg_nonveg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Veg Or Non Veg"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_select_best_for">
        <AutoCompleteTextView
            android:id="@+id/edt_veg_nonveg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="none"
            android:textColor="#3C3737"
            android:fontFamily="@font/mons_semibold"
            />
    </com.google.android.material.textfield.TextInputLayout>



    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_upload_recipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/ThemeOverlay.Material3.Button.ElevatedButton"
        app:layout_constraintTop_toBottomOf="@id/layout_select_veg_nonveg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/mons_bold"
        android:layout_marginTop="10dp"
        android:text="Upload Recipe"
        android:backgroundTint="@color/app_theme_color"
        />





</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>